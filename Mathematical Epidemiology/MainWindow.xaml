<Window x:Class="Mathematical_Epidemiology.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:charting="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        Title="Mathematical Epidemiology" Height="600" Width="800">

    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Close"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom" Height="20">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem>
                <TextBlock Name="lblTime" Text="3 sec"></TextBlock>
            </StatusBarItem>
            <Separator Grid.Column ="1"></Separator>
            <StatusBarItem Grid.Column ="2" HorizontalContentAlignment="Stretch">
                <ProgressBar Name="progressBar" Value="50" Height="10"></ProgressBar>
            </StatusBarItem>
        </StatusBar>
        <TabControl>
            <TabItem Header="Simple">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="150"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <charting:Chart></charting:Chart>
                    <GridSplitter Grid.Column="1"  Width="5"
                        VerticalAlignment="Stretch" HorizontalAlignment="Center">
                    </GridSplitter>
                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="20"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="20"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Button Grid.ColumnSpan="2" Name="btnRun">Run</Button>
                        <TextBlock Grid.Row="1" Grid.ColumnSpan="2" TextAlignment="Center">Parameters</TextBlock>
                        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" >
                            <TextBlock>Type:</TextBlock>
                            <RadioButton IsChecked="True">SIR</RadioButton>
                            <RadioButton>SIS</RadioButton>
                        </StackPanel>
                        <TextBlock Grid.Row="3">Stochastic?</TextBlock>
                        <CheckBox Grid.Row="3" Grid.Column="2" Name="checkStochastic"
                            Checked="checkStochastic_Checked_1" Unchecked="checkStochastic_Checked_1"></CheckBox>
                        <TextBlock Grid.Row="4">Population</TextBlock>
                        <TextBox Grid.Row="4" Grid.Column="1" Name="inputPopulation" IsEnabled="False">100</TextBox>
                        <TextBlock Grid.Row="5" Name="inputBirth">Birth rate</TextBlock>
                        <TextBox Grid.Row="5" Grid.Column="1">0</TextBox>
                        <TextBlock Grid.Row="6" Name="inputTransition">Transition rate</TextBlock>
                        <TextBox Grid.Row="6" Grid.Column="1">1</TextBox>
                        <TextBlock Grid.Row="7" Name="inputRecovery">Recovery rate</TextBlock>
                        <TextBox Grid.Row="7" Grid.Column="1">0.5</TextBox>
                        <TextBlock Grid.Row="8" Name="inputTime">Time</TextBlock>
                        <TextBox Grid.Row="8" Grid.Column="1">50</TextBox>
                        <TextBlock Grid.Row="9" Name="inputTimeStep">Time step</TextBlock>
                        <TextBox Grid.Row="9" Grid.Column="1">0.01</TextBox>
                        <TextBlock Grid.Row="10" Name="inputSusceptible">Susceptible</TextBlock>
                        <TextBox Grid.Row="10" Grid.Column="1">0.3</TextBox>
                        <TextBlock Grid.Row="11" Name="inputInfected">Infected</TextBlock>
                        <TextBox Grid.Row="11" Grid.Column="1">0.1</TextBox>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
